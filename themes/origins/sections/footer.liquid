<yc-footer> Footer </yc-footer>

{% schema %}
{
  "label": "Footer",
  "limit": 1,
  "settings": [
    {
      "type": "paragraph",
      "content": "Footer menu can be managed from your [Menu settings](https:\/\/seller-area.youcan.shop\/admin\/menus)"
    },
    {
      "type": "checkbox",
      "id": "toggle_footer",
      "label": "Hide footer",
      "default": false
    },
    {
      "type": "color",
      "id": "footer_background_color",
      "label": "Background color"
    },
    {
      "type": "color",
      "id": "footer_text_color",
      "label": "Text color",
      "default": "#fff"
    },
    {
      "type": "checkbox",
      "id": "social_media_exist",
      "label": "Social media",
      "default": true
    },
    {
      "type": "richtext",
      "id": "copyright",
      "label": "Copyright text"
    },
    {
      "type": "color",
      "id": "top_border_color",
      "label": "Top border color",
      "default": "#e5e5e5"
    }
  ],
  "blocks": [
    {
      "label": "Social media",
      "type": "social-media",
      "settings": [
        {
          "type": "image_picker",
          "id": "social_media_icon_image",
          "label": "Social media icon"
        },
        {
          "type": "text",
          "id": "social_media_url",
          "label": "Url"
        }
      ]
    }
  ]
}
{% endschema %}
