  <div class="icons-list" style="display: grid; grid-template-columns: repeat(7, 40px); grid-gap: 20px">
    {% render 'yc-icon', name: 'search', width: '24px', height: '24px' %}
    {% render 'yc-icon', name: 'cart' %}
    {% render 'yc-icon', name: 'arrow-up' %}
    {% render 'yc-icon', name: 'arrow-down' %}
    {% render 'yc-icon', name: 'arrow-left' %}
    {% render 'yc-icon', name: 'arrow-right' %}
    {% render 'yc-icon', name: 'caret-left' %}
    {% render 'yc-icon', name: 'caret-right' %}
    {% render 'yc-icon', name: 'x-mark' %}
    {% render 'yc-icon', name: 'plus' %}
    {% render 'yc-icon', name: 'minus' %}
    {% render 'yc-icon', name: 'trash' %}
    {% render 'yc-icon', name: 'menu' %}
    {% render 'yc-icon' %}
    {% comment %} Invalid icon name {% endcomment %}
  </div>
</div>

{% schema %}
{
  "label": "Default",
  "tag": "div",
  "settings": [
    {
      "type": "checkbox",
      "id": "menu",
      "default": true,
      "label": "Menu"
    }
  ]
}
{% endschema %}
