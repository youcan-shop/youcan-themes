<yc-section
  style="
    --section-space-top: 100px;
    --section-space-bottom: 100px;
    --section-text-color: 18, 18, 18;
    --section-bg-color: #FFFFFFFF;
  "
>
  <div style="display: grid; gap: 2em; width: 400px;">
    {% assign toggle_options = 'XL,L,M,S' | split: ',' %}
    {% render 'variant-toggle', name: 'size', options: toggle_options %}

    {% assign color_options = 'Red,Green,Blue,Yellow,Black,White' | split: ',' %}
    {% render 'variant-color', name: 'color', options: color_options %}

    {% assign radio_options = 'Tight,Slim,Regular,Relaxed' | split: ',' %}
    {% render 'variant-radio', name: 'fit', options: radio_options %}

    {% assign image_options = '1,2,3,4' | split: ',' %}
    {% render 'variant-image', name: 'image', options: image_options %}

    {% assign dropdown_options = 'Solid,Striped,Plaid,Floral' | split: ',' %}
    {% render 'variant-dropdown', name: 'pattern', options: dropdown_options, placeholder: 'Select a pattern' %}

    {% render 'variant-upload', name: 'my-file', placeholder: 'Click here to choose a file' %}
  </div>
</yc-section>

<yc-section>
  <yc-modal data-hidden="true">
    <button class="icon" data-toggle>
      {% render 'yc-icon' %}
    </button>
    <div class="modal-container">
      <div class="modal-box" data-modal>
        <div style="padding: 2em; display: flex; align-items: center; justify-content: space-between;">
          Hello world
          <button class="icon" data-size="sm" data-toggle>
            {% render 'yc-icon', name: 'x-mark' %}
          </button>
        </div>
      </div>
      <div class="modal-overlay overlay" data-toggle></div>
    </div>
  </yc-modal>
</yc-section>

