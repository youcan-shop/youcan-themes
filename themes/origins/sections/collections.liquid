{{ 'collection-card.css' | asset_url | stylesheet_tag }}

<yc-section
  style="
    --section-space-top: {{ section.settings.space_top }}px;
    --section-space-bottom: {{ section.settings.space_bottom }}px;
    --section-bg-color: {{ section.settings.background_color.hex }};
    --section-text-color: {{ section.settings.text_color.red }}, {{ section.settings.text_color.green }}, {{ section.settings.text_color.blue }};

    --collection-card-background: var(--section-bg-color);
    --collection-card-foreground: var(--section-text-color);

    --items-columns: {{ section.settings.collection_columns }};
  "
>
  {% if section.settings.title or section.settings.description %}
    <yc-section-head data-position="{{ section.settings.position }}">
      {% if section.settings.title %}
        <h2>{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.description %}
        <p>{{ section.settings.description }}</p>
      {% endif %}
    </yc-section-head>
  {% endif %}
  <div class="collections">
    <ul class="items-grid">
      {% for block in section.blocks %}
        <li>
          {%- render 'collection-card', collection: block.settings.collection -%}
        </li>
      {%- endfor -%}
    </ul>
  </div>
</yc-section>

{%- schema -%}
{
  "label": "Collections",
  "templates": ["index", "product"],
  "settings": [
    {
      "id": "title",
      "type": "text",
      "label": "Title",
      "default": "Featured Collections"
    },
    {
      "id": "description",
      "type": "textarea",
      "label": "Description",
      "default": "Collections worth exploring"
    },
    {
      "id": "position",
      "type": "select",
      "label": "Header position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "id": "text_color",
      "type": "color",
      "label": "Text color",
      "default": "#121212"
    },
    {
      "id": "background_color",
      "type": "color",
      "label": "Background color",
      "default": "#FFFFFFFF"
    },
    {
      "id": "collection_columns",
      "type": "range",
      "label": "Number of columns on desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "unit": "",
      "default": 3
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "id": "space_top",
      "type": "range",
      "label": "Space top",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 100
    },
    {
      "id": "space_bottom",
      "type": "range",
      "label": "Space bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 100
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "label": "Collection",
      "settings": [
        {
          "type": "category",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ]
}
{%- endschema -%}
