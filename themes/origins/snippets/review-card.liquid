{% comment %}
  Renders a review card

  Usage:
  {% render 'review-card' %}
{% endcomment %}

<template data-review>
  <li class="review-card">
    <div class="info">
      <div class="author">
        <p class="name" data-review-item="author">
          <span class="anonymous">
            {{ 'product.anonymous' | t }}
          </span>
        </p>
        <span class="date" data-review-item="date"></span>
      </div>
      <div class="rate" data-review-item="rating">
        {% for star in (1..5) %}
          {% render 'yc-icon', name: 'star', size: 15, fill: 'currentColor' %}
        {% endfor %}
      </div>
    </div>
    <div class="content">
      <p data-review-item="content"></p>
      <div data-review-item="images">
        <div class="images">
          <template data-img>
            <yc-modal-trigger data-modal="#review-images-{{ section.id }}-{{ product.id }}">
              <button class="icon" data-image data-trigger>
                <img
                  alt="{{ product.name }}"
                  height="100%"
                  width="100%"
                >
              </button>
            </yc-modal-trigger>
          </template>
          <label class="yc-btn icon">
            <input type="checkbox" name="show-more" hidden>
            <span data-count>+0</span>
          </label>
        </div>
      </div>

      <yc-modal id="review-images-{{ section.id }}-{{ product.id }}">
        <div class="image-preview" role="dialog">
          <button class="icon" data-size="sm" data-trigger>
            {% render 'yc-icon', name: 'x-mark' %}
          </button>
          <div class="preview-core">
            <img
              data-image-preview
              height="100%"
              width="100%"
              alt="product"
            >
          </div>
        </div>
      </yc-modal>
    </div>
  </li>
</template>
