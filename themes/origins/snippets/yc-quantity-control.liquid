{% comment %}
  Quantity input

  Accepts:
  - button_size: (optional) 'sm', 'md' or 'lg'
  - variant: Cart item liquid object

  Usage:
  {% render 'yc-quantity-input' variant: variant %}
{% endcomment %}

<yc-quantity-control class="quantity cart-quantity">
  <button
    class="yc-btn icon"
    name="minus"
    data-size="{{ button_size | default: 'md' }}"
    type="button"
    aria-label="decrease"
  >
    {% render 'yc-icon', name: 'minus' %}
  </button>
  <p>
    <span
      data-cart-item="quantity"
      data-item="{{ variant.id }}"
      data-product-variant="{{ variant.product_variant_id }}"
      {% if variant.inventory != null %}
        data-inventory="{{ variant.inventory }}"
      {% endif %}
      data-quantity="{{ variant.quantity }}"
    >
      {{- variant.quantity -}}
    </span>
  </p>
  <button
    class="yc-btn icon"
    name="plus"
    data-size="{{ button_size | default: 'md' }}"
    type="button"
    aria-label="increase"
  >
    {% render 'yc-icon', name: 'plus' %}
  </button>
</yc-quantity-control>
