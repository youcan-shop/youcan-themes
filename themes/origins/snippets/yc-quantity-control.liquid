{% comment %}
  Quantity input

  Accepts:
  - button_size: (optional) 'sm', 'md' or 'lg'
  - variant: Cart item liquid object

  Usage:
  {% render 'yc-quantity-input' variant: variant %}
{% endcomment %}

{% assign quantity = 1 %}

{% if variant.quantity != null %}
  {% assign quantity = variant.quantity %}
{% endif %}

<yc-quantity-control
  class="quantity cart-quantity"
  data-item="{{ variant.id }}"
  data-product-variant="{{ variant.product_variant_id }}"
  {% if variant.isTrackingInventory %}
    data-inventory="{{ variant.first_available_variant.inventory }}"
  {% endif %}
  data-quantity="{{ quantity }}"
  data-cart-item="quantity"
>
  <button
    class="yc-btn icon"
    name="minus"
    data-size="{{ button_size | default: 'md' }}"
    type="button"
    aria-label="decrease"
  >
    {% render 'yc-icon', name: 'minus' %}
  </button>
  <p>
    <span>
      {{- quantity -}}
    </span>
  </p>
  <button
    class="yc-btn icon"
    name="plus"
    data-size="{{ button_size | default: 'md' }}"
    type="button"
    aria-label="increase"
  >
    {% render 'yc-icon', name: 'plus' %}
  </button>
</yc-quantity-control>
