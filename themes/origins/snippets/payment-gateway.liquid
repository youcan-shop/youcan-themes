{% comment %}
  Renders a payment gateway

  Accepts:
  - type: {String} Gateway type (1..6)

  Usage:
  {% render 'payment-gateway', type: 'product' %}
{% endcomment %}

{%- case type -%}
  {% when '1' %}
    {{ 'order.payment_method.cod' | t }}
  {% when '2' %}
    {% render 'yc-payment-icons', name: 'stripe' %}
  {% when '3' %}
    {% render 'yc-payment-icons', name: 'paypal' %}
  {% when '4' %}
    {{ 'order.payment_method.custom' | t }}
  {% when '6' %}
    {% render 'yc-payment-icons', name: 'youcan-pay' %}
  {% else %}
    --
{% endcase %}
