{% comment %}
  Renders a product card

  Accepts:
  - product: {Object} Product Liquid object
  - placeholder_image: {String} The placeholder image to use when no product exists. Default: 'product-apparel-2' (optional)
  - show_badge (optional)
  - show_compare_at_price (optional)
  _ badge_text (optional)

  Usage:
  {% render 'card-product', lazy_load: true %}
{% endcomment %}

{{ 'product-card.css' | asset_url | stylesheet_tag }}

<div class="product-card" data-style="{{ settings.product_card_style }}">
  <a href="{{ item.url }}" class="img-link" aria-label="{{ item.name }}">
    <img
      loading="lazy"
      src="{{ item.thumbnail }}"
      alt="{{ item.name }}"
      height="100%"
      width="100%"
    >
  </a>
  {% if show_badge and badge_text %}
    <div class="badge" data-position="{{ settings.badge_position }}">
      <span>{{ badge_text }}</span>
    </div>
  {% endif %}
  <div class="info">
    <a href="{{ item.url }}" class="link title">
      {{ product.name | default: 'Product Name' }}
    </a>
    <div class="price">
      <span class="current">{{ product.price | default: 0 | money }}</span>
      {% if show_compare_at_price and compare_at_price != null %}
        <span class="compare-at">
          {{ product.compare_at_price | default: 0 | money }}
        </span>
      {% endif %}
    </div>
    {% unless settings.product_card_style == 'compact' %}
      <button class="yc-btn secondary">
        {{ 'general.buy_now' | t }}
      </button>
    {% endunless %}
  </div>
</div>
