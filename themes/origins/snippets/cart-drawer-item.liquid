<div class="item">
  <div class="image">
    {% if product.image %}
      <img
        loading="lazy"
        height="100%"
        width="100%"
        src="{{ product.image }}"
        alt="{{ product.name }}"
      >
    {% else %}
      <div class="card-placeholder">
        {% render 'yc-placeholder', name: 'product', size: '48' %}
      </div>
    {% endif %}
  </div>
  <div class="info">
    <div class="heading">
      <a href="/products/#" class="link" title="{{ product.name }}">
        {{ product.name | default: 'Product Name' }}
      </a>
      {% if product.variations.size > 1 %}
        <p class="variant">
          {% for variant in product.variations %}
            <span>{{- variant[1] -}}</span>
            <span>/</span>
          {% endfor %}
        </p>
      {% endif %}
      <span data-price>{{ product.price | default: 0 | money }}</span>
    </div>
    <div class="actions">
      {% render 'yc-quantity-control', button_size: 'sm', variant: product %}
      <button class="yc-btn icon" data-delete data-size="sm" aria-label="Delete">
        {% render 'yc-icon', name: 'trash' %}
      </button>
    </div>
  </div>
</div>
