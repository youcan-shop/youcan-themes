{% comment %}
  Renders a product card 'Add to cart' button

  Accepts:
  - variant_id: {String}  Default variant id
  - available: {Boolean} Default variant availability
  - source: {String} (Optional) Parent source 'product-form', 'quick-view'

  Usage:
  {% render 'product-add-to-cart', variant_id: '045-dj8-30k-ws7', available: true %}
{% endcomment %}

<yc-product-form
  quantity="1"
  variant-id="{{ variant_id }}"
  {% unless available %}
    not-available
  {% endunless %}
  {% if source %}
    source="{{ source }}"
  {% endif %}
>
  <button
    name="add"
    data-buy-button
    class="secondary"
    {% unless available %}
      disabled
    {% endunless %}
  >
    <span
      data-add-to-cart="{{ 'general.add_to_cart' | t }}"
      data-out-of-stock="{{ 'general.out_of_stock' | t }}"
    >
    </span>
  </button>
</yc-product-form>
