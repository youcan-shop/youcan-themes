{% comment %}
  Renders a contact form

  Usage:
  {% render 'contact-form' %}
{% endcomment %}

{% form 'contact' %}
  {% if form.posted_successfully %}
    <div class="success">
      {% render 'yc-icon', name: 'check-circle', size: 24 %}
      <span>{{ 'contact.success_message' | t }}</span>
    </div>
  {%- elsif form.errors -%}
    <div class="error">
      {% render 'yc-icon', name: 'exclamation-triangle', size: 24 %}
      <span>{{ 'contact.error_message' | t }}</span>
    </div>
    <ul class="errors">
      {% for error in form.errors %}
        {% assign message = error[1] %}
        <li>{{ message }}</li>
      {% endfor %}
    </ul>
  {% endif %}
  <div class="form-group">
    <div class="field">
      <label for="email">{{ 'contact.fields.email' | t }}</label>
      <input id="email" name="email" type="email" placeholder="{{ 'contact.fields.email' | t }}" required>
    </div>
    <div class="field">
      <label for="subject">{{ 'contact.fields.subject' | t }}</label>
      <input id="subject" name="subject" type="text" placeholder="{{ 'contact.fields.subject' | t }}" required>
    </div>
  </div>
  <div class="field">
    <label for="message">{{ 'contact.fields.message' | t }}</label>
    <textarea type="text" id="message" name="message" minlength="5" rows="8" placeholder="{{ 'contact.fields.message' | t }}" required></textarea>
  </div>
  <button type="submit" class="primary">{{ 'contact.action' | t }}</button>
{% endform %}
