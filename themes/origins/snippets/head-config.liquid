{%- style -%}
  :root {
    /* Global */
    --direction: ltr;
    --font-family: 'Poppins', sans-serif;

    /* Colors */
    --color-primary: #121212;
    --color-secondary: #fff;

    --color-gray-50: #f3f3f3;
    --color-gray-300: #dcdcdc;
    --color-gray-500: #535151;
    --color-yellow-50: #fff5dc;
    --color-yellow-500: #faab00;

    --color-info-50: #ddeefd;
    --color-info-500: #2085d7;
    --color-error-50: #ffe0e0;
    --color-error-500: #fb5656;
    --color-warning-50: #ffaa00;
    --color-warning-500: #ff970f;
    --color-success-50: #d0f0e1;
    --color-success-500: #48c348;

    /* Text Size */
    --text-xs: 12px;
    --text-sm: 13px;
    --text-md: 14px;
    --text-lg: 16px;
    --text-xl: 18px;
    --text-2xl: 24px;
    --text-3xl: 30px;

    /* Gap */
    --gap-xs: 3px;
    --gap-sm: 5px;
    --gap-md: 8px;
    --gap-lg: 16px;
    --gap-xl: 25px;
    --gap-2xl: 32px;
    --gap-3xl: 48px;

    /* Radius */
    --radius-sm: 2px;
    --radius-md: 4px;
    --radius-lg: 6px;
    --radius-xl: 8px;
    --radius-2xl: 12px;
    --radius-circle: 50%;

    /* Shadow */
    --shadow-dark-sm: rgba(0, 0, 0, 0.03) 0px 3px 14px 0px, rgba(0, 0, 0, 0.1) 0px 0px 0px 1px;
    --shadow-dark-focus-sm: rgba(0, 0, 0, 0.03) 0px 3px 14px 0px, var(--color-gray-500) 0px 0px 0px 1px;

    /* Animation | Transition */
    --transition-duration: 0.4s;
  }
{%- endstyle -%}

