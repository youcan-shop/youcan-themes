{% comment %}
  Renders a dropdown select (Product variant)

  Accepts:
  - placeholder: {String} input placeholder
  - options: {Array} variant options
  - name: {String} input name
  - default_value: (optional) {String} default checked value

  Usage:
  {% render 'variant-dropdown', name: 'pattern', options: [], placeholder: 'Select', default_value: '' %}
{% endcomment %}

<yc-variant name="dropdown">
  <yc-combobox name="{{ name }}">
    <yc-combobox-trigger class="yc-btn icon" tabindex="0">
      <yc-combobox-value>{{ placeholder | default: 'Select' }}</yc-combobox-value>
    </yc-combobox-trigger>
    <yc-combobox-content>
      {% for option in options %}
        <yc-combobox-item
          value="{{ option }}"
          {% if option == default_value %}
            checked
          {% endif %}
        >
          {{ option }}
        </yc-combobox-item>
      {% endfor %}
    </yc-combobox-content>
  </yc-combobox>
</yc-variant>
