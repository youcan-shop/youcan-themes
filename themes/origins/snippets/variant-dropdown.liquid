{% comment %}
  Renders a dropdown select (Product variant)

  Accepts:
  - placeholder: {String} input placeholder
  - options: {Array} variant options
  - name: {String} input name

  Usage:
  {% render 'variant-dropdown', name: 'pattern', options: [], placeholder: 'Select' %}
{% endcomment %}

<yc-variant name="dropdown">
  <yc-select name="{{ name }}">
    <yc-select-trigger class="yc-btn icon" role="combobox">
      <yc-select-value>{{ placeholder | default: 'Select' }}</yc-select-value>
    </yc-select-trigger>
    <yc-select-content>
      {% for option in options %}
        <yc-select-item value="{{ option }}">
          {{ option }}
        </yc-select-item>
      {% endfor %}
    </yc-select-content>
  </yc-select>
</yc-variant>
