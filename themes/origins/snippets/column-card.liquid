{% comment %}
  Renders a column card

  Accepts:
  - column: {Object} Column information

  Usage:
  {% render 'column-card', column: {...} %}
{% endcomment %}

{% assign section_settings = section.settings %}
{% assign image_url = 'column.webp' | asset_url %}

{% if column.image.src %}
  {% assign image_url = column.image.src %}
{% endif %}

<div class="column-card">
  <div class="column-img">
    <img
      width="100%"
      height="100%"
      alt="{{ column.title }}"
      src="{{ image_url }}"
      data-width="{{ section_settings.image_width }}"
      data-ratio="{{ section_settings.image_ratio }}"
    >
  </div>
  <div class="column-info">
    <span class="column-title h4">{{ column.title }}</span>
    <p class="column-subtitle">{{ column.subtitle }}</p>
  </div>
</div>
