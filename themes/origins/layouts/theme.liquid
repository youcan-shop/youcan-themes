<!doctype html>
{% assign lang = store.store_locale.iso_code %}
{% assign direction = 'ltr' %}

{% if lang == 'ar' %}
  {% assign direction = 'rtl' %}
{% endif %}

<html lang="{{ lang }}" dir="{{ direction }}">
  <head>
    {%- render 'head-config' -%}
  </head>
  <body>
    {%- section 'announcement-bar' %}
    {%- section 'header' %}

    <main class="main-container">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}
    <yc-overlay></yc-overlay>
  </body>
</html>
