{{ 'section.footer.css' | asset_url | stylesheet_tag }}

<div ui-layout="footer">
  <div class="main-area">
    <div class="logo">
      {% if settings.logo_desktop.src or settings.logo_mobile.src %}
        <a href="/">
          <picture>
            {% if settings.logo_mobile.src %}
              <source srcset="{{ settings.logo_mobile.src }}" media="(max-width: 768px)">
            {% endif %}
            {% if settings.logo_desktop.src %}
              <source srcset="{{ settings.logo_desktop.src }}" media="(min-width: 769px)">
            {% endif %}
            <img
              src="{{ settings.logo_desktop.src | default: settings.logo_mobile.src }}"
              alt="{{ store.name }}"
              height="100%"
              width="40"
              sizes="(width > 769px) {{ settings.logo_desktop_width }}px, 40px"
            >
          </picture>
        </a>
      {% else %}
        <a class="name" ui-slot="link-button" data-variant="black" href="/">
          {{ store.name }}
        </a>
      {% endif %}
    </div>
    <div class="groups">
      {% for list in link-lists %}
        {% if list.links | count > 0  and list != main-link-list %}
          <div class="group">
            <h4 class="title">{{ list.title }}</h4>
            <ul class="links">
              {% for link in list.links %}
                <li class="link">
                  <a ui-slot="link-button" data-variant="gray" data-size="md" href="{{ link.url }}">
                    {{ link.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  <hr ui-slot="divider" data-variant="line">
  <div class="secondary-area">
    <span class="copyright"> Â© {{ default: 'now' | date: '%Y' }}. All Rights Reserved. </span>
    <ul class="social-links">
      <li class="link">
        <a ui-slot="button" data-variant="neutral" data-mode="ghost" data-size="lg" data-as-icon href="#" target="_blank" aria-label="Facebook">
          {% render 'misc.icon', name: 'hgi-facebook-02' %}
        </a>
      </li>
      <li class="link">
        <a ui-slot="button" data-variant="neutral" data-mode="ghost" data-size="lg" data-as-icon href="#" target="_blank" aria-label="Snapchat">
          {% render 'misc.icon', name: 'hgi-snapchat' %}
        </a>
      </li>
      <li class="link">
        <a ui-slot="button" data-variant="neutral" data-mode="ghost" data-size="lg" data-as-icon href="#" target="_blank" aria-label="Instagram">
          {% render 'misc.icon', name: 'hgi-instagram' %}
        </a>
      </li>
      <li class="link">
        <a ui-slot="button" data-variant="neutral" data-mode="ghost" data-size="lg" data-as-icon href="#" target="_blank" aria-label="TikTok">
          {% render 'misc.icon', name: 'hgi-tiktok' %}
        </a>
      </li>
    </ul>
  </div>
</div>
{% schema %}
{
  "label": "Footer",
  "tag": "footer",
  "limit": 1,
  "settings": []
}
{% endschema %}
