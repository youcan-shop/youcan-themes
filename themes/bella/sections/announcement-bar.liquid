{{ 'section.announcement-bar.css' | asset_url | stylesheet_tag }}

<div ui-section="announcement-bar">
  <button class="arrow" ui-slot="compact-button" data-variant="ghost" data-size="lg" aria-label="Previous">
    <i class="hgi hgi-stroke hgi-arrow-left-01"></i>
  </button>
  <ul class="items" ui-slot="carousel" aria-orientation="vertical" style="--per-page: 1;">
    {% for item in (1..3) %}
      <li class="item" ui-slot="carousel-item">Welcome to Our Store {{ item }}</li>
    {% endfor %}
  </ul>
  <button class="arrow" ui-slot="compact-button" data-variant="ghost" data-size="lg" aria-label="Next">
    <i class="hgi hgi-stroke hgi-arrow-right-01"></i>
  </button>
</div>

{% schema %}
{
  "label": "Announcement Bar",
  "settings": []
}
{% endschema %}
