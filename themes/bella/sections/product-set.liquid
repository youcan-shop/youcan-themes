{{ 'section.product-set.css' | asset_url | stylesheet_tag }}

<div
  ui-section="product-set"
  {% if section.settings.override_global_colors %}
    style="
      --brand-hue: {{ section.settings.main_color.hue }};
      --brand-saturation: {{ section.settings.main_color.saturation }}%;
      --brand-lightness: {{ section.settings.main_color.lightness }}%;
    "
    data-scoped-color
    data-intensity="{{ section.settings.color_intensity }}"
  {% endif %}
  data-orientation="{{ section.settings.orientation }}"
  data-top-spacing="{{ section.settings.top_spacing }}"
  data-bottom-spacing="{{ section.settings.bottom_spacing }}"
>
  <div class="media-area">
    {% if section.settings.image %}
      <img
        src="{{ section.settings.image.src }}"
        alt="{{ section.settings.heading |  default: section.settings.subheading }}"
        height="100%"
        width="100%"
      >
    {% else %}
      {% render 'misc.image-fallback', icon_size: 100 %}
    {% endif %}
  </div>
  <div class="core-area">
    <div ui-slot="head">
      <h4 class="heading">{{ section.settings.heading }}</h4>
      <h1 class="subheading">{{ section.settings.subheading }}</h1>
    </div>
    <ul class="items-box">
      {% for product in section.blocks %}
        {% render 'block.product-item' %}
      {% endfor %}
    </ul>
    {% if section.blocks.size %}
      <div class="cta-box">
        <button ui-slot="button" data-variant="primary" data-mode="filled" data-size="lg">
          {% render 'misc.icon', name: 'hgi-shopping-bag-01' %}
          {% assign total = 0 %}

          {% for product in section.blocks %}
            {% assign default_variant = product.settings.block_product.selected_or_first_available_variant %}
            {% assign price = default_variant.price | default: product.settings.block_product.price %}
            {% assign compare_at_price = default_variant.compare_at_price | default: product.settings.block_product.compare_at_price %}

            {% if compare_at_price %}
              {% assign total = total | plus: compare_at_price %}
            {% else %}
              {% assign total = total | plus: price %}
            {% endif %}
          {% endfor %}
          Add All to Cart - {{ total | money }}
        </button>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "label": "Product Set",
  "templates": ["index", "product", "page", "cart"],
  "limit": 3,
  "max_blocks": 10,
  "settings": [
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "main_color",
      "label": "Main Color",
      "default": "#121212"
    },
    {
      "type": "select",
      "id": "color_intensity",
      "label": "Color Intensity",
      "options": [
        { "label": "As Solid Background", "value": "as-solid-bg" },
        { "label": "As Light Background", "value": "as-light-bg" },
        { "label": "As Foreground", "value": "as-foreground" }
      ],
      "default": "as-foreground"
    },
    {
      "type": "checkbox",
      "id": "override_global_colors",
      "label": "Override global colors",
      "default": false
    },
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Header"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Explore our line"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover Radiance"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "orientation",
      "label": "Orientation",
      "options": [
        { "label": "Vertical", "value": "vertical" },
        { "label": "Horizontal", "value": "horizontal" }
      ],
      "default": "horizontal"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "top_spacing",
      "label": "Top Spacing",
      "min": 0,
      "max": 64,
      "step": 4,
      "unit": "px",
      "default": 64
    },
    {
      "type": "range",
      "id": "bottom_spacing",
      "label": "Bottom Spacing",
      "min": 0,
      "max": 64,
      "step": 4,
      "unit": "px",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "product",
      "label": "Product item",
      "limit": 10,
      "settings": [
        {
          "type": "product",
          "id": "block_product",
          "label": "Product"
        }
      ]
    }
  ]
}
{% endschema %}
