{% comment %}
  Font (default: DM Sans | Almarai)
{% endcomment %}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link
  rel="stylesheet"
  href="https://fonts.googleapis.com/css?family={{ settings.font_family }}|{{ settings.font_family_headings }}|{{ settings.font_family_subheadings }}|{{ settings.font_family_buttons }}"
>

<style>
  :root {

    /* Base */
    --font-family: '{{ settings.font_family | replace: '+', ' ' }}';

    {% case settings.base_size %}
      {% when 'small' %}
        --font-base-size: var(--font-body-sm);
      {% when 'medium' %}
        --font-base-size: var(--font-body-md);
      {% else %}
        --font-base-size: var(--font-body-lg);
    {% endcase %}

    /* Heading */
    --font-heading-scale: calc({{ settings.font_scale_headings }} / 100);
    --font-heading-family: {{ settings.font_family_headings | replace: '+', ' ' }};

    /* Subheading */
    --font-subheading-scale: calc({{ settings.font_scale_subheadings }} / 100);
    --font-subheading-family: {{ settings.font_family_subheadings | replace: '+', ' ' }};
    --font-subheading-weight: {{ settings.font_weight_subheadings }};
    --text-subheading-transform: {{ settings.text_transform_subheadings }};

    /* Button */
    --font-button-family: {{ settings.font_family_buttons | replace: '+', ' ' }};
    --font-button-weight: {{ settings.font_weight_buttons }};

    /* Colors */
    --brand-hue: {{ settings.main_color.hue }};
    --brand-saturation: {{ settings.main_color.saturation }}%;
    --brand-lightness: {{ settings.main_color.lightness }}%;

    /* Alignment */
    --text-heading-alignment-desktop: {{ settings.heading_alignment_desktop }};
    --text-heading-alignment-mobile: {{ settings.heading_alignment_mobile }};
    --alignment-product: {{ settings.product_alignment  }};

    /* Corner */
    --radius-button: {{ settings.corner_radius_button }};
    --radius-input: {{ settings.corner_radius_input }};
    --radius-product: {{ settings.corner_radius_product }};
    --radius-collection: {{ settings.corner_radius_collection }};
    --radius-badge: {{ settings.corner_radius_badge }};
    --radius-toast: {{ settings.corner_radius_toast }};
    --radius-slide: {{ settings.corner_radius_slide }};
    --radius-testimonial: {{ settings.corner_radius_testimonials }};
    --radius-review: {{ settings.corner_radius_reviews}};
    --radius-column: {{ settings.corner_radius_multicolumns }};
    --radius-media: {{ settings.corner_radius_image_with_text }};
    --radius-feature-item: {{ settings.corner_radius_feature_list }};
  }

  :root,
  [data-scoped-color] {
    {% if settings.main_color.hue == 0 and settings.main_color.lightness <= 20 %}
      --brand-raw-lightness: {{ settings.main_color.lightness }}%;
    {% endif %}
  }
</style>

