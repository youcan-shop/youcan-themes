{% comment %}
  Renders a slide item (Block)

  Accepts:
    - slide: {Object} Item info

  Usage:
  {% render 'block.slide' %}
{% endcomment %}

<li
  ui-carousel="item"
  ui-block="slide"
  ui-slot="carousel-item"
  {{ slide.youcan_attributes }}
>
  <div class="media" style="background-color: var(--color-{{ slide }}-container);"></div>
  <div class="content">
    <div ui-slot="head">
      <h4 class="heading">Wellness Care</h4>
      <h1 class="subheading">Beauty, Starts from within</h1>
    </div>
    <a
      class="cta"
      ui-slot="button"
      data-variant="neutral"
      data-mode="filled"
      data-size="lg"
      href="/"
    >
      See All Collections
    </a>
  </div>
</li>
