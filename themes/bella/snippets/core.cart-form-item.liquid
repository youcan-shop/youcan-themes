<div class="item">
  <div class="image" ui-cart-item="image">
    <img
      src="{{ product.image }}"
      alt="{{ product.name }}"
      height="100%"
      width="100%"
      {% if product.image contains '/store-front/images/product-default' %}
        hidden
      {% endif %}
    >
    {% if product.image contains '/store-front/images/product-default' %}
      {% render 'misc.image-fallback' %}
    {% else %}
      {% render 'misc.image-fallback', hidden: true %}
    {% endif %}
  </div>
  <div class="content">
    <div class="info">
      <div class="bio">
        <span class="title" title="{{ product.name }}" ui-cart-item="title">{{ product.name }}</span>
        <span
          class="variants"
          ui-cart-item="variant"
          {% if product.variations == null or product.variations.default %}
            hidden
          {% endif %}
        >
          {% for variant in product.variations %}
            <span>{{ variant[1] }}</span>
            {% unless forloop.index == product.variations.size - 1 %}
              <span>/</span>
            {% endunless %}
          {% endfor %}
        </span>
      </div>
      <span class="price" ui-cart-item="price">{{ product.price | default: 0 | money }}</span>
    </div>
    <div class="actions">
      {% render 'core.quantity', product: product, size: 'xs' %}
      <ui-cart-remove
        item="{{ product.id }}"
        product-variant="{{ product.product_variant_id }}"
      >
        <button
          ui-slot="button"
          data-variant="error"
          data-mode="lighter"
          data-size="xs"
          data-as-icon
          aria-label="remove"
          ui-cart-item="delete-button"
        >
          {% render 'misc.icon', name: 'hgi-delete-02' %}
        </button>
      </ui-cart-remove>
    </div>
  </div>
</div>
